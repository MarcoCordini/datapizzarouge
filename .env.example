# ===============================================
# DataPizzaRouge Configuration Template
# ===============================================
# Copia questo file in .env e configura i valori

# === API KEYS (REQUIRED) ===
# Ottieni le chiavi da:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# === QDRANT CONFIGURATION ===
# Modalità: "local" per sviluppo, "cloud" per produzione
QDRANT_MODE=local
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Solo per modalità cloud:
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# === CRAWLER SETTINGS ===
# Numero massimo di pagine da crawlare
MAX_PAGES=1000

# Richieste concorrenti
CONCURRENT_REQUESTS=16

# Delay tra richieste (secondi)
DOWNLOAD_DELAY=0.5

# User agent per le richieste
USER_AGENT=DataPizzaRouge-Bot/1.0

# Profondità massima di crawling
DEPTH_LIMIT=10

# === RAG SETTINGS ===
# Dimensione chunk (caratteri)
CHUNK_SIZE=1000

# Overlap tra chunk (caratteri)
CHUNK_OVERLAP=200

# Numero di chunk da recuperare per query
TOP_K_RETRIEVAL=5

# === EMBEDDING SETTINGS ===
# Modello embedding OpenAI
EMBEDDING_MODEL=text-embedding-3-small

# Dimensioni embedding
EMBEDDING_DIMENSIONS=1536

# Batch size per generazione embeddings
EMBEDDING_BATCH_SIZE=100

# === LLM SETTINGS ===
# Modello Claude da usare
LLM_MODEL=claude-sonnet-4-5-20250929

# Max tokens per risposta
LLM_MAX_TOKENS=4096

# Temperature (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# === STORAGE PATHS ===
# Path per dati raw (relativo alla root del progetto)
# RAW_DATA_PATH=./data/raw

# Path per storage Qdrant locale
# QDRANT_DATA_PATH=./data/qdrant

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=datapizzarouge.log
